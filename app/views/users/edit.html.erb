<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>
<%= form_for(@user) do |f| %>
  <ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone, required: true %>
  </p>
  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio, required: true %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address, required: true %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city, required: true %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.text_field :state, required: true %>
  </p>
  <p>
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode, required: true %>
  </p>
  <%#= f.radio_button_tag :instructor, false %>
  <%#= f.radio_button_tag(:instructor, true) %>
  <%#= label_tag(:instructor, "instructor") %>
  <%#= radio_button_tag(:age, "adult") %>
  <%#= label_tag(:age_adult, "I'm over 21") %>
  <div class="field">
    <%= f.label "Intructor" %> <br />
    <%= f.radio_button :instructor, true %> <br />
  </div>
  <div class="field">
    <%= f.label "Student" %> <br />
    <%= f.radio_button :student, true %> <br />
  </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= button_to "Delete my account", user_path, :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-danger" %>