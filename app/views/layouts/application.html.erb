<!DOCTYPE html>
<html>
<head>
  <title>Yoga4u</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>

  <!-- Add the jQuery library from CDN -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>

  <!-- Add the google maps library -->
  <script src="//maps.googleapis.com/maps/api/js"></script>

  <!-- Add JS from the asset pipeline afterwards -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body>
<div class="navcolor">
  <nav class="navbar navbar-inverse navbar-fixed-top" >
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Yoga4U', root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar">
        
        <% if current_user %>
          <li class="dropdown pull-right">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= image_tag current_user.image, alt: current_user.first_name %><%= current_user.first_name %> <%= current_user.last_name %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Profile', user_path(current_user.id) %></li>
              <li><%= link_to 'Edit', edit_user_path(current_user.id) %></li>
              <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
            </ul>
          </li>
          <!-- <ul class="nav navbar-nav pull-right">
            <li><%= image_tag current_user.image, alt: current_user.first_name %></li>
            <li><%= link_to 'Profile', user_path(current_user.id) %></li>
            <li><%= link_to 'Account', edit_user_path(current_user.id) %></li>
            <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
          </ul> -->
        <% else %>
          <ul class="nav navbar-nav">
            <li><%= link_to 'Sign in via Facebook', '/auth/facebook' %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>
</div>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
